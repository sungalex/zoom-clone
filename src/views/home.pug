doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom - SocketIO
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h2 Noom
        main 
            div#nick
                h3
                span
                form
                    input(type="text" placeholder="write nick name", required)
                    button Store
            div#welcome 
                form
                    input(type="text" placeholder="room name(create or join)", required)
                    button Enter Room
                h4 Open Rooms:
                ul
            div#room 
                h3 
                span
                ul 
                form
                    input(type="text" placeholder="your message", required)
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/app.js")